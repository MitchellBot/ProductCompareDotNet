@{
    ViewData["Title"] = "To Do List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IList<ProductCompareDotNet.Models.Product>



<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="jumbotron text-center">
                <h1>Lets Talk About Stuff</h1>
                <form action="/Categories/CreateProduct" method="post">
                    <div class="col-md-6 col-md-offset-3">
                        <div class="input-group input-group-lg">
                            <input name="Name" type="text" class="form-control" placeholder="Thinking About Buying Something?">
                            <input hidden="" name="CatId" placeholder="Category Id" value="1">
                            <input type="submit" value="GOGO" />
                        </div>
                    </div>
                </form>

               <br><br>
            </div>
        </div>
    </div>
</div>

       @foreach (var product in Model)
        {
        
                <div class="container-fluid main content">

                    <div class="product-box">
                        <div class="img-wrap">
                            <img src="@product.ProductImg" height="100" width="100">
                        </div>

                        <div class="product-name">
                            @Html.ActionLink(product.ProductName, "ProductList", "Products", new { id = product.ProductId })
                        </div>
                        <div class="product-sale-price">
                            $@product.ProductPrice

                         

                        </div>
                        <div class="product-likes-and-comments">
                            <div class="product-comments" id="shopping-cart-box">
                                @product.Comments.Count()
                                <a href="/Products/ProductList/@product.ProductId"><i class="fa fa-commenting" aria-hidden="true" style="font-size:47px;position:relative;top:-2px;"></i></a>
                            </div>

                            <div class="votes">
                                <form class="downvote">
                                    <input type="number" name="id" hidden value="@product.ProductId" />
                                    <button><i class="fa fa-arrow-circle-down down-@product.ProductId" aria-hidden="true">@product.ProductDownVotes</i></button>

                                </form>

                                <form class="upvote">
                                    <input type="number" name="id" hidden value="@product.ProductId" />
                                    <button><i class="fa fa-arrow-circle-up up-@product.ProductId" aria-hidden="true">@product.ProductUpVotes</i></button>

                                </form>

                            </div>
                         
                        </div>
                    </div>
                </div>

}



