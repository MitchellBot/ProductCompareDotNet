    <hr />
</div>
<div class="Reviews">
    <h2>Leave Review</h2>
    <form action="/Products/LeaveReview" method="post">

        <textarea name="Comment" placeholder="Leave Review Here'"></textarea>
        <input hidden name="ProdId" placeholder="Category Id" value="@ViewBag.ProdId" />
        <input hidden name="Stars" placeholder="Category Id" value=5 />

        <br />
        <input class="btn btn-info" type="submit" value="Submit Comment" />
    </form>
    @foreach (var product in Model)
    {
        @foreach (var review in product.Reviews)
        {
            <p>@review.ReviewText</p>
            <li>@review.User.UserName</li>

        }
    }
</div>
    <hr />
    <div class="QA">
    <h2>Ask A Question</h2>
    <form action="/Products/AskQuestion" method="post">
        <textarea name="Question" placeholder="What's Your Question?'"></textarea>
        <input hidden name="ProdId" placeholder="Category Id" value="@ViewBag.ProdId" />

        <br />
        <input class="btn btn-info" type="submit" value="Submit Question" />
    </form>
    @foreach (var product in Model)
    {
        @foreach (var question in product.Questions)
        {
            <div class="question">
                <p>@question.QuestionText</p>
                <p>@question.User.UserName</p>

                <form action="/Products/AnswerQuestion" method="post">
                    <textarea name="Answer" placeholder="Know The Answer?'"></textarea>
                    <input hidden name="QuestionId" value="@question.QuestionId" />
                    <input hidden name="ProductId" type="number" value="@ViewBag.ProdId" />
                    <br />
                    <input class="btn btn-danger btn-circle" type="submit" value="Submit Answer" />
                </form>

                @foreach (var answer in question.Answers)
                {
                    <p>@answer.AnswerText</p>
                    <p>@answer.User.UserName</p>

                }
            </div>

        }
    }
</div>











